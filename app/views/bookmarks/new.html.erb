<h1>Bookmarks#new</h1>
<p>Find me in app/views/Bookmarks/new.html.erb</p>

<div class="movies-container overflow-auto" style="max-height: 300px;">
  <% @movies.each do |movie| %>
    <div class="card shadow my-2 text-shadow-bold" style="border-radius: 10px; max-width: 500px;">
      <div class="card-body py-1" style="background-color: #4682A9; border-radius: 10px; color: white;">
        <h6 class="my-2"><%= movie.title %></h6>
        <p><%= movie.overview %></p>
        <div class="d-flex justify-content-between align-items-center">
            <p><%= movie.poster_url %></p>
            <p><%= movie.rating %></p>
          </div>
      </div>
    </div>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.hidden_field :movie_id, value: movie.id %>
      <%= f.submit "Add to List", class: "btn btn-light" %>
      <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
    <% end %>
  <% end %>
</div>


<%= button_to "Go Back", lists_path, method: :get, class: "btn btn-light mt-3" %>
