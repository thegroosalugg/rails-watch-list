<h1>Bookmarks#new</h1>
<p>Find me in app/views/Bookmarks/new.html.erb</p>

<div class="movies-container overflow-auto" style="max-height: 300px; max-width: 500px;">
  <% @movies.each do |movie| %>
    <div class="card shadow my-3" style="border-radius: 10px;">
      <div class="card-body py-1" style="background-color: #4682A9; border-radius: 10px; color: white;">
        <h6 class="my-2"><%= movie.title %></h6>
        <p style="font-size: 12px;"><%= movie.overview %></p>
        <div class="d-flex justify-content-between align-items-center">
          <p style="font-size: 10px;"><%= movie.poster_url %></p>
          <p style="font-size: 10x;"><%= movie.rating %></p>
        </div>
      </div>
    </div>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.hidden_field :movie_id, value: movie.id %>
       <div class="d-flex justify-content-around align-items-center" style="min-height: 100px;">
        <div class="col-9">
          <%= f.input :comment, placeholder: 'Enter a comment about the movie', class: "form-control" %>
        </div>
        <div class="col-3 d-flex justify-content-end mt-4">
          <%= f.submit "Add to List", class: "btn btn-light btn-sm", style: "border-radius: 30px;" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<%= button_to "Go Back", lists_path, method: :get, class: "btn btn-light mt-3", style: "border-radius: 30px;" %>
