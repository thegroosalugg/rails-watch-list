<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<div class="lists-container overflow-auto" style="max-height: 300px;">
  <% @lists.each do |list| %>
    <div class="card shadow my-2 text-shadow-bold" style="border-radius: 10px;">
      <div class="card-body py-1" style="background-color: #4682A9; border-radius: 10px;">
        <h6 class="my-2"><%= link_to list.name, list_path(list), class: "text-decoration-none" %></h6>
      </div>
    </div>
  <% end %>
</div>

<%= button_to "New list", new_list_path, method: :get, class: "btn btn-light mt-3" %>
